<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.karolskora.msorgranizer.activities.InjectionDetailsActivity"
    android:background="@color/color_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?frame_background"
            android:id="@+id/layout_injection_details">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/injection_point_text"
                android:id="@+id/injectionDate"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/text_size_medium"
                android:padding="10dp"
                android:background="?background_color"
                android:textColor="?textColor"/>
            <android.opengl.GLSurfaceView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/injectionDate"
                android:id="@+id/glSurface"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/injectionPointImageView"
                android:layout_below="@+id/injectionDate"
                android:layout_alignLeft="@+id/glSurface"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/symptons_text"
                android:textSize="@dimen/text_size_medium"
                android:layout_below="@id/glSurface"
                android:id="@+id/symptomsText"
                android:padding="10dp"
                android:background="?background_color"
                android:textColor="?textColor"/>
            <CheckBox
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/temperature_text"
                android:id="@+id/temperatureCheckBox"
                android:layout_below="@id/symptomsText"
                android:padding="10dp"
                android:clickable="false"
                android:background="?background_color"
                android:textColor="?textColor"/>
            <CheckBox
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/trembles_text"
                android:id="@+id/tremblesCheckBox"
                android:layout_below="@id/temperatureCheckBox"
                android:padding="10dp"
                android:clickable="false"
                android:background="?background_color"
                android:textColor="?textColor"/>
            <CheckBox
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/ache_text"
                android:id="@+id/acheCheckBox"
                android:layout_below="@id/tremblesCheckBox"
                android:padding="10dp"
                android:clickable="false"
                android:background="?background_color"
                android:textColor="?textColor"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_report_button_text"
                android:id="@+id/button4"
                android:layout_below="@+id/acheCheckBox"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button"
                android:onClick="onButtonSendReportClick"/>
        </RelativeLayout>
</ScrollView>