<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="#000000"
        android:background="#ffffff"
        android:id="@+id/nameTextEdit"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:width="@dimen/initial_settings_text_view_width"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_medium" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/doctorNameTextEdit"
        android:layout_below="@+id/nameTextEdit"
        android:textColor="#000000"
        android:background="#ffffff"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@id/nameTextEdit"
        android:layout_alignRight="@id/nameTextEdit"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_medium"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nurseNameTextEdit"
        android:layout_below="@+id/doctorNameTextEdit"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:background="#ffffff"
        android:singleLine="true"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@id/nameTextEdit"
        android:layout_alignRight="@id/nameTextEdit"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_medium"/>
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:background="@color/initial_settings_button_next_color"
        android:onClick="onButtonSaveUserInfoClick"
        android:text="@string/save_text"
        android:textSize="@dimen/text_size_medium"
        android:layout_below="@+id/nurseNameTextEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

</RelativeLayout>
