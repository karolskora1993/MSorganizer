<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:drawable/dialog_holo_light_frame">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/name_text_view_hint"
        android:id="@+id/textViewName"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="#000000"
        android:background="#ffffff"
        android:id="@+id/nameTextEdit"
        android:layout_below="@+id/textViewName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:width="@dimen/initial_settings_text_view_width"
        android:textSize="@dimen/text_size_medium"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/doctor_name_text_view_hint"
        android:id="@+id/textViewDoctorName"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nameTextEdit"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/doctorNameTextEdit"
        android:layout_below="@+id/nameTextEdit"
        android:textColor="#000000"
        android:background="#ffffff"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@id/nameTextEdit"
        android:layout_alignRight="@id/nameTextEdit"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:textSize="@dimen/text_size_medium"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nurse_name_text_view_hint"
        android:id="@+id/textViewNurseName"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/doctorNameTextEdit"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nurseNameTextEdit"
        android:layout_below="@+id/doctorNameTextEdit"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:background="#ffffff"
        android:singleLine="true"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@id/nameTextEdit"
        android:layout_alignRight="@id/nameTextEdit"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:textSize="@dimen/text_size_medium"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email_text_view_hint"
        android:id="@+id/textViewEmail"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nurseNameTextEdit"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailTextEdit"
        android:layout_below="@+id/textViewEmail"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:background="#ffffff"
        android:singleLine="true"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@id/nameTextEdit"
        android:layout_alignRight="@id/nameTextEdit"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:textSize="@dimen/text_size_medium"/>
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:background="@drawable/button"
        android:onClick="onButtonSaveUserInfoClick"
        android:text="@string/save_text"
        android:textSize="@dimen/text_size_medium"
        android:layout_below="@+id/emailTextEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

</RelativeLayout>
